<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:foreground="?selectableItemBackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_pizza_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/pizza" />

        <TextView
            android:id="@+id/txt_pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:layout_toEndOf="@+id/img_pizza_image"
            android:text="Pizza name"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/txt_pizza_name"
            android:layout_toEndOf="@+id/txt_pizza_name"
            android:src="@drawable/pizza" />

        <TextView
            android:id="@+id/txt_pizza_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_pizza_name"
            android:layout_below="@+id/imageView2"
            android:singleLine="true"
            android:text="Red capsiscum, Baby corn, Tofu"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_pizza_description"
            android:layout_below="@+id/txt_pizza_description"
            android:text="$"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_pizza_description"
            android:layout_toEndOf="@+id/textView3"
            android:text="15"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btn_add"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="103dp"
            android:layout_height="27dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:layout_alignBottom="@+id/img_pizza_image"
            android:layout_alignParentEnd="true"
            android:text="Add" />


    </RelativeLayout>

</android.support.v7.widget.CardView>